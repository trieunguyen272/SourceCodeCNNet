<div>
    <div class="content_top">
        <div class="heading">
            <h3></h3>
        </div>
    </div>
    <div class="row">
            <div class="col-lg-12" style="text-align: right">
                <input style="border-radius: 7px; width: 270px; height: 40px" type="text" placeholder="Tìm kiếm" id="txtSearch" />
                <button type="submit" style="border-radius: 7px; width: 50px; height: 40px; margin-left: -50px" id="btnSearch">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>       
    </div> 
    @*<div class="section_group">*@
    <div class="row" style="height: 970px; margin-top: 20px">
        <div class="col col-12">
           
                    @foreach (var item in Model)
                    {
                        if (@item.SOCHOTRONG > 0)
                        {
                            <div class="col-lg-2 col-md-12 col-xs-2" style="height: 300px">
                                <div class="card">
                                    <img src="~/Assets/phongktx.jpg" style="max-width: 310px; max-height: 150px" />
                                    <p>Mã phòng: @item.MAPHONG</p>
                                    <div class="price-number">
                                        <p> <span class="rupees"></span>Giá phòng: @item.GIAPHONG</p>
                                    </div>
                                    <div class="number">
                                        <p> <span class="rupees"></span>Số chỗ trống: @item.SOCHOTRONG</p>
                                    </div>
                                    <div class="add-cart">
                                        <a class="btn" style="color: blue; background-color: papayawhip; margin-left: 60px" href="@Url.Action("Details", new { id = item.MAPHONG})">
                                            Đăng ký
                                        </a>
                                    </div>
                                </div>
                                </div>
                                }
                                else
                                {
                                    <div class="col-lg-2 col-md-12 col-xs-2" style="height: 300px">
                                        <div class="card">
                                            <img src="~/Assets/phongktx.jpg" style="max-width: 310px; max-height: 150px" />
                                            <p>Mã phòng: @item.MAPHONG</p>
                                            <div class="price-number">
                                                <p> <span class="rupees"></span>Giá phòng: @item.GIAPHONG</p>
                                            </div>
                                            <div class="number">
                                                <p> <span class="rupees"></span>Số chỗ trống: @item.SOCHOTRONG</p>
                                            </div>
                                            <div class="add-cart">
                                                <a class="btn btn-default" style="pointer-events: none; cursor: default; color: darkgray; background-color: white; margin-left: 60px" href="@Url.Action("Details", new { id = item.MAPHONG})">
                                                    Đăng ký
                                                </a>

                                            </div>
                                        </div>
                                    </div>
                                }
                                }
                            </div>
    </div>
    <div class="row text-center">
        <ul class="pagination">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </ul>
    </div>
</div>
<script>
    $('#btnSearch').on('click', function() {
        var giatrinhap = $('#txtSearch').val();
        window.location.href = "/Student/PHONGs/SearchByName?name=" + giatrinhap;
        //alert(giatrinhap);
    });
</script>

