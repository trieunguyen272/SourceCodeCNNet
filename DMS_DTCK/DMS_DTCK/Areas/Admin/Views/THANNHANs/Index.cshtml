@model IEnumerable<Models.Framework.THANNHAN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h4 style="text-align: center">DANH SÁCH THÂN NHÂN</h4>
<div>
    <div class="row">
        <div class="col-lg-12" style="text-align: right">
            <input style="border-radius: 7px; width: 270px; height: 40px" type="text" placeholder="Tìm kiếm" id="txtSearch" />
            <button type="submit" style="border-radius: 7px; width: 50px; height: 40px; margin-left: -50px" id="btnSearch">
                <i class="glyphicon glyphicon-search"></i>
            </button>
        </div>
    </div>
</div>
<table class="table" style="margin-top: 20px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SINHVIEN.MASV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HOTENCHA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NGHENGHIEPCHA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SDTCHA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HOTENME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NGHENGHIEPME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SDTME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.THANNHANSVNT)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SINHVIEN.MASV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HOTENCHA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGHENGHIEPCHA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDTCHA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HOTENME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGHENGHIEPME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDTME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.THANNHANSVNT)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MATHANNHAN }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MATHANNHAN })
            </td>
        </tr>
    }

</table>
<script>
    $('#btnSearch').on('click', function() {
        var giatrinhap = $('#txtSearch').val();
        window.location.href = "/Admin/THANNHANs/SearchByName?name=" + giatrinhap;
    });
</script>